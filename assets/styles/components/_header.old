@import "../globals/vars";

header {
  width: 100%;
  height: 150px;
  margin: 0 auto 50px auto;
  background-color: $violet;
  display: flex;
  position: relative;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-radius: 0 0 15px 15px;


  .container {
    position: relative;

    .logo {
      display: flex;
      width: 100%;
      height: auto;
      margin: 0 auto;
      text-align: center;
      justify-content: center;
      align-items: center;

      a {
        img {
          border: 0;
          max-height: 120px;
          height: 100%;
        }
      }
    }

    nav {
      position: fixed;
      top: 10px;
      right: 0;

      .access {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        input {
          display: block;
          position: absolute;
          width: 40px;
          height: 40px;
          top: 0px;
          right: 0px;
          cursor: pointer;

          opacity: 0; /* hide this */
          z-index: 2; /* and place it over the hamburger */

          -webkit-touch-callout: none;
          &:checked .btn-menu {
            transform: rotate(45deg) translate(-2px, -1px);
            background: #232323;
          }
        }

        .access-btn {
          display: flex;
          justify-content: center;
          align-items: center;
          width: 40px;
          height: 40px;
          margin: 10px;
          color: $white;
          border-radius: 50%;

          &.add {
            background-color: $orange;
          }

          &.log {
            background-color: $red;
          }

          &.menu{
            background-color: $violet;
            position: relative;
          }

        }
      }

      i {
        color: $white;
        font-size: 20px;
        font-weight: bold;
      }

      #menuToggle {
        display: block;
        position: absolute;
        top: 50px;
        right: 50px;
        z-index: 1;
        -webkit-user-select: none;
        user-select: none;

        a {
          text-decoration: none;
          color: #232323;
          transition: color 0.3s ease;
        }

        a:hover {
          text-decoration: underline;
        }
      }



      #menuToggle .btn-menu {
        right: 10%;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 40px;
        height: 40px;
        margin: 10px;
        color: $white;
        border-radius: 50%;
        z-index: 2;
        transform-origin: 4px 0px;
        transition: transform 0.5s cubic-bezier(0.77, 0.2, 0.05, 1.0),
        background 0.5s cubic-bezier(0.77, 0.2, 0.05, 1.0),
        opacity 0.55s ease;
      }



      #menu {
        position: absolute;
        width: 300px;
        right:-150px;
        margin: -100px 0 0 0;
        padding: 50px;
        padding-top: 125px;
        border-radius: $little-border-radius;
        background-color: rgba(255, 248, 243, 0.75);
        list-style-type: none;
        -webkit-font-smoothing: antialiased;
        /* to stop flickering of text in safari */

        transform-origin: 0% 0%;
        transform: translate(100%, 0);

        transition: transform 0.5s cubic-bezier(0.77,0.2,0.05,1.0);
      }

      #menu li {
        padding: 10px 0;
        font-size: 22px;
      }

      #menuToggle input:checked ~ ul {
        transform: none;
      }
    }
  }

}
